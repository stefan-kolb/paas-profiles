<div id="runtime-<%=runtime.id%>" name="runtime" class="control-group">
  <label class="control-label"></label>
  <div class="controls">
    <div class="input-append">
      <select id="language-runtime-<%=runtime.id%>" class="selectpicker show-tick span2">
        <option data-hidden="true"></option>
        <option value="apex">apex</option>
        <option value="clojure">clojure</option>
        <option value="cobol">cobol</option>
        <option value="dotnet">dotnet</option>
        <option value="erlang">erlang</option>
        <option value="go">go</option>
        <option value="groovy">groovy</option>
        <option value="haskell">haskell</option>
        <option value="java">java</option>
        <option value="lua">lua</option>     
        <option value="node">node</option>
        <option value="perl">perl</option>      
        <option value="php">php</option>      
        <option value="python">python</option>       
        <option value="ruby">ruby</option>      
        <option value="scala">scala</option>      
      </select>
      <input id="versions-runtime-<%=runtime.id%>" type="text" class="span3" style="width: 325px;" placeholder="Versions separated by commas, e.g. 1.7, 1.8">
      <button id="delete-runtime-<%=runtime.id%>" class="btn btn-danger" type="button">Delete</button>
    </div>
  </div>
</div>
<script> 
  $(function() {
    $('#language-runtime-<%=runtime.id%>').val('<%= runtime.language %>');
    $('#versions-runtime-<%=runtime.id%>').val(stringifyArray (<%= runtime.versions %>) );
    
    $('#delete-runtime-<%=runtime.id%>').click(function() {
      if (confirm('Do you want to delete this runtime?')) {
        $('#runtime-<%=runtime.id%>').remove();
      } else {
        return false;
      }
    });
    
  });
</script>