<div id="addon-service<%=addon_service.id%>" name="addon-service" class="control-group">
  <label class="control-label"></label>
  <div class="controls">
    <div class="input-append">
      <input id="name-addon-service-<%=addon_service.id%>" type="text" class="span2" placeholder="Name">
      <select id="type-addon-service-<%=addon_service.id%>" class="selectpicker show-tick span2">
        <option data-hidden="true"></option>
        <option value="datastore">datastore</option>
        <option value="search">search</option>
        <option value="worker">worker</option>
        <option value="analytics">analytics</option>
        <option value="payment">payment</option>
        <option value="media">media</option>    
        <option value="messaging">messaging</option>  
        <option value="devops">devops</option>   
        <option value="other">other</option>   
      </select>
      <input id="url-addon-service-<%=addon_service.id%>" type="text" class="span2" placeholder="The URL of the service">
      <button id="delete-addon-service-<%=addon_service.id%>" class="btn btn-danger" type="button">Delete</button>
    </div>
  </div>
</div>
<script>
  $(function() {
    $('#name-addon-service-<%=addon_service.id%>').val('<%= addon_service.name %>');
    $('#type-addon-service-<%=addon_service.id%>').val('<%= addon_service.type %>');
    $('#versions-addon_service-<%=addon_service.id%>').val('<%= addon_service.url %>');

    $('#delete-addon-service-<%=addon_service.id%>').click(function() {
      if (confirm('Do you want to delete this add-on service?')) {
        $('#addon-service<%=addon_service.id%>').remove();
      } else {
        return false;
      }
    });

  });
</script>